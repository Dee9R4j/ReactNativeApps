{
  "expo": {
    "name": "OasisApp",
    "slug": "oasis-app",
    "owner": "dee2005p",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/oasis_fixed_logo.png",
    "scheme": "oasisapp",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.dee2005p.oasisapp",
      "infoPlist": {
        "NSCameraUsageDescription": "This app requires camera access to scan QR codes for event check-ins and verification.",
        "NSLocationWhenInUseUsageDescription": "This app uses your location to show nearby events, food stalls, and campus navigation on the map.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses your location to show nearby events, food stalls, and campus navigation on the map.",
        "NSFaceIDUsageDescription": "This app uses Face ID to authenticate before placing orders.",
        "NSMicrophoneUsageDescription": "This app uses the microphone for audio recording."
      }
    },
    "android": {
      "package": "com.dee2005p.oasisapp",
      "adaptiveIcon": {
        "backgroundColor": "#000000",
        "foregroundImage": "./assets/images/oasis_fixed_logo.png"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.RECORD_AUDIO",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static",
            "deploymentTarget": "15.1"
          }
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-black.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000000",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-font",
      "expo-secure-store",
      "expo-sqlite",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera for QR scanning."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location for campus navigation."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "placeholder-project-id"
      }
    },
    "runtimeVersion": "1.0.0",
    "updates": {
      "url": "https://u.expo.dev/placeholder-project-id"
    }
  }
}
